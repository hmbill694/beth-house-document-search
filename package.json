{
  "name": "ironsworn",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run --hot src/main.ts\" \"bun run tailwind:dev\" \"bun run liveReload\"",
    "liveReload": "bunx beth-stack",
    "start": "bun run tailwind && bun run src/main.ts",
    "db:push": "bunx drizzle-kit push:sqlite",
    "db:studio": "bunx drizzle-kit studio",
    "db:seed": "bun run src/model/store/seed.ts",
    "tailwind": "bunx --bun tailwindcss -i ./src/main.css -o ./public/dist/main.css",
    "tailwind:dev": "bunx tailwindcss -i ./src/main.css -o ./public/dist/main.css --watch",
    "typecheck": "bunx --bun tsc",
    "format:check": "prettier --check .",
    "format": "prettier --write . --list-different",
    "lint": "eslint . --report-unused-disable-directives",
    "lint:fix": "eslint . --report-unused-disable-directives --fix"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@kitajs/ts-html-plugin": "^1.3.4",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/eslint": "^8.56.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@unocss/transformer-variant-group": "^0.55.7",
    "better-sqlite3": "^8.7.0",
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "daisyui": "^4.12.10",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-turbo": "^1.13.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-isaacscript": "^3.12.2",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "0.0.9",
    "@elysiajs/cron": "^0.6.0",
    "@elysiajs/static": "^0.6.0",
    "@elysiajs/swagger": "^0.6.2",
    "@iconify-json/logos": "^1.1.44",
    "@iconify-json/lucide": "^1.1.209",
    "@libsql/client": "0.3.5-pre.13",
    "@lucia-auth/adapter-sqlite": "^2.0.1",
    "@lucia-auth/oauth": "^3.5.3",
    "@t3-oss/env-core": "^0.6.1",
    "@tlscipher/holt": "1.1.0",
    "beth-stack": "0.0.33",
    "drizzle-orm": "^0.28.6",
    "drizzle-typebox": "^0.1.1",
    "elysia": "^1.1.12",
    "lucia": "^2.7.7",
    "pino-pretty": "^10.3.1",
    "zod": "^3.23.8"
  }
}
